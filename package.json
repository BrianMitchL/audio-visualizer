    "eslint": "^8.20.0",
    "eslint-config-react-app": "^7.0.1",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.4"
  },
  "engines": {
    "node": ">=16.16.0"
  },
  "simple-git-hooks": {
